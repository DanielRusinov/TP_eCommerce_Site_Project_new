<%= form_with(model: listing, local: true, html: { multipart: true }) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :listing_title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :listing_description %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, id: :listing_price %>
  </div>

  <div class="field">
    <%= form.label :image %>
     <%= form.file_field :image, id: :listing_image %>
  </div>

  <div class="field">
    <%= select_tag(:category_id, options_for_select(@categories), {:prompt => 'Select Category'}) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
